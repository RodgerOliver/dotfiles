# ===== GENERAL =====
set $mod Mod4
font pango:mononoki 11
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# lock screen
bindsym $mod+Shift+x exec --no-startup-id ~/.config/i3/scripts/lock
# power machine
bindsym $mod+Shift+BackSpace exec --no-startup-id ~/.config/i3/scripts/power
# hide window borders
# hide_edge_borders both
bindsym Print exec --no-startup-id scrot 'Screenshot_%d-%m-%y_%H-%M-%S.png' -e 'mv $f ~/Pictures/'
# disable mouse hover focus
focus_follows_mouse no

# ===== APPS SHORTCUTS =====
bindsym $mod+d exec --no-startup-id "dmenu_run -nf '#BBBBBB' -nb '#333333' -sb '#7768AE' -sf '#FFFFFF' -fn mononoki-13"
bindsym $mod+Return exec --no-startup-id terminator
bindsym $mod+Shift+Return exec --no-startup-id firefox
bindsym $mod+equal [class="Firefox"] resize set 300px 313px
bindsym $mod+Shift+equal [class="Firefox"] resize set 465px 429px

# ===== WINDOWS ACTIONS =====
# make window sticky
bindsym $mod+z sticky toggle
# kill window
bindsym $mod+Shift+q kill
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# move focused window
bindsym $mod+Shift+h move left 20px
bindsym $mod+Shift+j move down 20px
bindsym $mod+Shift+k move up 20px
bindsym $mod+Shift+l move right 20px
# resize window
bindsym $mod+y resize shrink width 5 px or 5 ppt
bindsym $mod+u resize grow height 5 px or 5 ppt
bindsym $mod+i resize shrink height 5 px or 5 ppt
bindsym $mod+o resize grow width 5 px or 5 ppt
bindsym $mod+Shift+y resize shrink width 50 px or 50 ppt
bindsym $mod+Shift+u resize grow height 50 px or 50 ppt
bindsym $mod+Shift+i resize shrink height 50 px or 50 ppt
bindsym $mod+Shift+o resize grow width 50 px or 50 ppt
# split in vertical orientation
bindsym $mod+v split v
bindsym $mod+c split h
bindsym $mod+x split toggle
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+q focus child

# ===== SCRATCHPAD =====
# bindsym $mod+Shift+p move scratchpad
bindsym $mod+p [title="scratchpad" class="Terminator"] scratchpad show; [title="scratchpad" class="Terminator"] move position center
bindsym $mod+Shift+ccedilla exec --no-startup-id terminator -T "scratchpad" -x "tmux a -t scratchpad"
for_window [title="scratchpad" class="Terminator"] floating enable
for_window [title="scratchpad" class="Terminator"] sticky enable
for_window [title="scratchpad" class="Terminator"] move scratchpad
for_window [title="scratchpad" class="Terminator"] move position center
for_window [title="scratchpad" class="Terminator"] border pixel 5

# ===== WORKSPACES =====
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 "9: ï†¼"
# apps on workspaces
for_window [class="Spotify"] move to workspace $ws9
# assign [class="Firefox"] $ws2
# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
# move in active workspaces
bindsym $mod+Tab workspace back_and_forth
# bindsym $mod+Tab workspace next
# bindsym $mod+Shift+Tab workspace prev

# ===== DEBUG AND EXIT =====
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# ===== AUDIO AND BRIGHTNESS =====
# Pulse Audio controls
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%; exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%; exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle; exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master 5%+; exec --no-startup-id pkill -RTMIN+10 i3blocks 
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 5%-; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse sset Master toggle; exec --no-startup-id pkill -RTMIN+10 i3blocks
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 && pkill -RTMIN+20 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 && pkill -RTMIN+20 i3blocks
# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioStop exec --no-startup-id playerctl pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
# change NUM_LOCK
bindsym --release Num_Lock  exec --no-startup-id pkill -SIGRTMIN+11 i3blocks

# ===== COLORS =====
# border = window title, top and bottom borders
# bground = window title, background
# text = window title, text
# indicator = window body, where the next window will be tilled
# child_border = window body, left and right borders
# yellow #e1bc29
# purple #7768ae
# green #3bb273
# orange #f26419
# darkblue #003f91
# lightblue #4d9de0
# lightgreen #21fa90

set $c_bg_fc #2489c6
set $c_bg_in #555555
set $c_bg_uf #424651
set $c_bg_ug #e15554
set $c_tx_fc #ffffff
set $c_tc_uf #888888
set $c_in #f26419

# class                 border    bground   text      indicator child_border
client.focused          $c_bg_fc  $c_bg_fc  $c_tx_fc  $c_in     $c_bg_fc
client.focused_inactive $c_bg_in  $c_bg_in  $c_tx_fc  $c_in     $c_bg_uf
client.unfocused        $c_bg_uf  $c_bg_uf  $c_tc_uf  $c_in     $c_bg_uf
client.urgent           $c_bg_ug  $c_bg_ug  $c_tx_fc  $c_in     $c_bg_uf
client.background       $c_tx_fc

# ===== i3BLOCKS =====
bar {
	tray_output primary
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	font pango:mononoki 11
	position top
	colors {
		background #000000
		# text
		statusline #ffffff
		separator  #777777
		# class            border   bg       text
		focused_workspace  $c_bg_fc $c_bg_fc $c_tx_fc
		active_workspace   $c_bg_uf $c_bg_uf $c_tx_fc
		inactive_workspace $c_bg_uf $c_bg_uf $c_tx_uf
		urgent_workspace   $c_bg_ug $c_bg_ug $c_tx_fc
		binding_mode       $c_bg_ug $c_bg_ug $c_tx_fc
	}
}

# ===== STARTUP COMMANDS =====
exec --no-startup-id xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'
exec --no-startup-id redshift-gtk -l -22.57690:-44.95760
exec_always feh --bg-scale ~/.config/wallpaper.jpg
